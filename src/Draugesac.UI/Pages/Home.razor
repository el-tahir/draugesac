@page "/"

<PageTitle>Dashboard - Draugesac</PageTitle>

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 bg-primary text-white mb-4">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col">
                            <h1 class="card-title mb-2">
                                <i class="bi bi-shield-check me-3"></i>
                                Welcome to Draugesac
                            </h1>
                            <p class="card-text fs-5 mb-0 opacity-90">
                                Secure Document Redaction System - Protect sensitive information with ease
                            </p>
                        </div>
                        <div class="col-auto d-none d-md-block">
                            <i class="bi bi-file-lock2 display-1 opacity-25"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Upload Document Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-cloud-upload text-primary display-4"></i>
                    </div>
                    <h5 class="card-title">Upload Document</h5>
                    <p class="card-text text-muted">
                        Upload documents for secure redaction processing
                    </p>
                    <a href="/upload" class="btn btn-primary">
                        <i class="bi bi-upload me-1"></i>
                        Start Upload
                    </a>
                </div>
            </div>
        </div>

        <!-- My Documents Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-files text-success display-4"></i>
                    </div>
                    <h5 class="card-title">My Documents</h5>
                    <p class="card-text text-muted">
                        View and manage your uploaded documents
                    </p>
                    <a href="/documents" class="btn btn-success">
                        <i class="bi bi-folder2-open me-1"></i>
                        View Documents
                    </a>
                </div>
            </div>
        </div>

        <!-- Help & Support Card -->
        <div class="col-md-6 col-lg-3">
            <div class="card h-100 border-0 shadow-sm">
                <div class="card-body text-center p-4">
                    <div class="mb-3">
                        <i class="bi bi-question-circle text-info display-4"></i>
                    </div>
                    <h5 class="card-title">Help & Support</h5>
                    <p class="card-text text-muted">
                        Get help and learn about the system
                    </p>
                    <a href="/help" class="btn btn-info">
                        <i class="bi bi-book me-1"></i>
                        Learn More
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        How It Works
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <div class="mb-2">
                                <i class="bi bi-1-circle-fill text-primary fs-1"></i>
                            </div>
                            <h6>Upload</h6>
                            <p class="text-muted small">Upload your documents securely to our system</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="mb-2">
                                <i class="bi bi-2-circle-fill text-warning fs-1"></i>
                            </div>
                            <h6>Configure</h6>
                            <p class="text-muted small">Specify what information needs to be redacted</p>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div class="mb-2">
                                <i class="bi bi-3-circle-fill text-success fs-1"></i>
                            </div>
                            <h6>Download</h6>
                            <p class="text-muted small">Receive your securely redacted document</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-shield-check me-2"></i>
                        Security Features
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-lock-fill text-success me-3"></i>
                        <span>End-to-end encryption</span>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-cloud-check-fill text-primary me-3"></i>
                        <span>Secure cloud storage</span>
                    </div>
                    <div class="d-flex align-items-center mb-3">
                        <i class="bi bi-eye-slash-fill text-warning me-3"></i>
                        <span>Privacy protection</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-trash-fill text-danger me-3"></i>
                        <span>Automatic cleanup</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
